pushButton = 13; // defining the pushButton to pin 13

void setup() { 

  Serial.begin(9600);      // start serial communication 

  pinMode(pushButton, INPUT);  // defines the push Button as an INPUT
} 

  

void loop() { 

  int buttonState = digitalRead(pushButton);  // read the button state 

  

  Serial.print("buttonState = "); 

  Serial.println(buttonState);  // print it to the Serial Monitor 

  

  delay(1);  // small delay for stability 
}
